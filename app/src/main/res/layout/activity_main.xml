<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Calculadora simples"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/white"
    />

    <TextView
        android:id="@+id/activity_text_num1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Número 1"
        android:textSize="20sp"
        />


    <EditText
        android:id="@+id/activity_numero1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/activity_text_num2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Número 2"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/activity_numero2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:inputType="numberDecimal"

        />

    <TextView
        android:id="@+id/activity_main_txtview_resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:layout_margin="8dp"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/activity_main_btn_somar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Somar" />

</LinearLayout>